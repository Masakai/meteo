#
# 使い方:
#   1. このファイルを docker-compose.yml にコピー
#   2. 実際の設定値を記入（IPアドレス、認証情報、座標など）
#   3. 起動:     docker compose up -d
#   4. 停止:     docker compose down
#   5. ログ確認: docker compose logs -f
#
# Webプレビュー:
#   http://localhost:8080/  (ダッシュボード)
#   http://localhost:8081/  (カメラ1)
#   http://localhost:8082/  (カメラ2)
#   http://localhost:8083/  (カメラ3)
#
# 検出結果は ./detections/ 以下に保存されます

services:
  # ダッシュボード（全カメラ一覧）
  dashboard:
    build:
      context: .
      dockerfile: Dockerfile.dashboard
    container_name: meteor-dashboard
    restart: unless-stopped
    environment:
      - TZ=Asia/Tokyo
      - PORT=8080
      - LATITUDE=35.0000
      - LONGITUDE=139.0000
      - TIMEZONE=Asia/Tokyo
      - ENABLE_TIME_WINDOW=true
      - CAMERA1_NAME=camera1
      - CAMERA1_NAME_DISPLAY=カメラ1
      - CAMERA1_URL=http://localhost:8081
      - CAMERA2_NAME=camera2
      - CAMERA2_NAME_DISPLAY=カメラ2
      - CAMERA2_URL=http://localhost:8082
      - CAMERA3_NAME=camera3
      - CAMERA3_NAME_DISPLAY=カメラ3
      - CAMERA3_URL=http://localhost:8083
    ports:
      - "8080:8080"
    volumes:
      - ./detections:/output
    networks:
      - meteor-net
    depends_on:
      - camera1
      - camera2
      - camera3

  # カメラ1 (192.168.0.11)
  camera1:
    build:
      context: .
      args:
        MASK_IMAGE: masks/camera1_mask.png
    container_name: meteor-camera1
    restart: unless-stopped
    environment:
      - TZ=Asia/Tokyo
      - RTSP_URL=rtsp://username:password@192.168.0.11/live
      - CAMERA_NAME=camera1
      - CAMERA_NAME_DISPLAY=カメラ1
      - SENSITIVITY=medium
      - SCALE=0.5
      - BUFFER=15
      - EXCLUDE_BOTTOM=0.0625
      - EXTRACT_CLIPS=true
      - LATITUDE=35.0000
      - LONGITUDE=139.0000
      - TIMEZONE=Asia/Tokyo
      - ENABLE_TIME_WINDOW=true
      - MASK_IMAGE=/app/mask_image.png
      - MASK_DILATE=20
      - MASK_SAVE=
      - FB_NORMALIZE=true
      - FB_DELETE_MOV=true
      - WEB_PORT=8080
    ports:
      - "8081:8080"
    volumes:
      - ./detections:/output
    networks:
      - meteor-net
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # カメラ2 (192.168.0.12)
  camera2:
    build:
      context: .
      args:
        MASK_IMAGE: masks/camera2_mask.png
    container_name: meteor-camera2
    restart: unless-stopped
    environment:
      - TZ=Asia/Tokyo
      - RTSP_URL=rtsp://username:password@192.168.0.12/live
      - CAMERA_NAME=camera2
      - CAMERA_NAME_DISPLAY=カメラ2
      - SENSITIVITY=medium
      - SCALE=0.5
      - BUFFER=15
      - EXCLUDE_BOTTOM=0.0625
      - EXTRACT_CLIPS=true
      - LATITUDE=35.0000
      - LONGITUDE=139.0000
      - TIMEZONE=Asia/Tokyo
      - ENABLE_TIME_WINDOW=true
      - MASK_IMAGE=/app/mask_image.png
      - MASK_DILATE=20
      - MASK_SAVE=
      - FB_NORMALIZE=true
      - FB_DELETE_MOV=true
      - WEB_PORT=8080
    ports:
      - "8082:8080"
    volumes:
      - ./detections:/output
    networks:
      - meteor-net
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # カメラ3 (192.168.0.13)
  camera3:
    build:
      context: .
      args:
        MASK_IMAGE: masks/camera3_mask.png
    container_name: meteor-camera3
    restart: unless-stopped
    environment:
      - TZ=Asia/Tokyo
      - RTSP_URL=rtsp://username:password@192.168.0.13/live
      - CAMERA_NAME=camera3
      - CAMERA_NAME_DISPLAY=カメラ3
      - SENSITIVITY=medium
      - SCALE=0.5
      - BUFFER=15
      - EXCLUDE_BOTTOM=0.0625
      - EXTRACT_CLIPS=true
      - LATITUDE=35.0000
      - LONGITUDE=139.0000
      - TIMEZONE=Asia/Tokyo
      - ENABLE_TIME_WINDOW=true
      - MASK_IMAGE=/app/mask_image.png
      - MASK_DILATE=20
      - MASK_SAVE=
      - FB_NORMALIZE=true
      - FB_DELETE_MOV=true
      - WEB_PORT=8080
    ports:
      - "8083:8080"
    volumes:
      - ./detections:/output
    networks:
      - meteor-net
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

networks:
  meteor-net:
    driver: bridge
